{
  "name": "clay-terminal",
  "version": "1.0.0",
  "description": "Clay - A beautiful terminal built with Electron",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "npm run build:electron",
    "build:electron": "tsc && npm run copy-files",
    "build:web": "cd web && npm install && npm run build",
    "build:backend": "cd backend && npm install",
    "build:all": "npm run build:backend && npm run build:web",
    "copy-files": "node -e \"const fs=require('fs');const path=require('path');fs.mkdirSync('dist/renderer',{recursive:true});fs.copyFileSync('renderer/index.html','dist/renderer/index.html');fs.copyFileSync('renderer/styles.css','dist/renderer/styles.css');\"",
    "start": "npm run build && electron .",
    "dev": "npm run copy-files && tsc && electron .",
    "watch": "tsc --watch",
    "web:dev": "cd web && npm run dev",
    "web:build": "npm run build:web",
    "web:install": "cd web && npm install",
    "backend:start": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "start:all": "npm run build:all && npm run backend:start"
  },
  "keywords": ["electron", "terminal", "shell"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.3"
  }
}
